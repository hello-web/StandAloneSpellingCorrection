{   
    "model_name": "standard_char", 
    "best_checkpoint": "latest_checkpoints/standard_char_best",
    "periodic_checkpoint": "latest_checkpoints/standard_char_period",

    "batch_size": 128, 
    "warmup_steps": 1,
    "learning_rate": 1e-3,

    "beta1": 0.9,
    "beta2": 0.98, 
    "eps": 1e-9,

    "label_smooth_eps": 0.1,

    "n_split": 5,
    "limit": 3e5,

    "model_type": "standard",
    "oov": false,

    "src_vocab_size": 50003, 
    "bpe_vocab_size": 5003,
    "char_vocab_size": 135,
    "trg_vocab_size": 50003,
    "unk_idx": 50001,
    "oov_idx": 50002,

    "src_pad_idx": 0,

    "trg_pad_idx": 1,

    "word_max_length": 20,
    "sentence_max_length": 200,

    "d_model": 512,
    "d_char_model": 256,
    "d_inner_hid": 1024,
    "d_char_inner_hid": 512,
    "d_key": 64,
    "d_value": 64,
    "n_head": 8,
    "n_layer": 6,
    "n_char_layer": 4,
    "prepostprocess_dropout": 0.1,
    "attention_dropout": 0.1,
    "relu_dropout": 0.1,
    "preprocess_cmd": "n",
    "postprocess_cmd": "da",  
    "dropout_seed": null,
    "weight_sharing": false,

    "prefix": "data/",
    "train_input_path": "char_train.txt",
    "train_label_path": "char_train_label.jsonl",
    "dev_input_path": "dev.txt",
    "dev_label_path": "dev_label.jsonl",
    "test_input_path": "test.txt",
    "test_label_path": "test_label.jsonl",
    "dev_detection_path": null,
    "test_detection_path": null,
    "char_path": "charVocab.txt",
    "word_path": "wordVocab.txt",
    "bpe_path": "1B.model",

    "dynamic": false,
    "mode": "char",
    "train_replacement": "new_data/train_replacement.json"
}
